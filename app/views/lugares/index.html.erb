<div class="col-md-4 col-md-offset-4">
  <%= form_tag(lugares_path, method: :get) do %>
    <%= text_field_tag :term, params[:term], class: "searchTerm", placeholder: "Que lugar vocÃª procura?" %>
    <%= button_tag 'Search', class: "searchButton" do %>
      <i class="fa fa-search" aria-hidden="true"></i>
    <% end %>

  <% end %>
</div>


<div class="row">
  <% @lugares.each do |lugar|  %>
    <div class="col-md-12 lugarNaLista">
      <% if lugar.pictures? %>
        <div class="col-md-3 img-fluid">
          <%= link_to(image_tag(lugar.pictures[0].url, width: 400, height: 260, class: "img-responsive"), lugar_path(lugar.id)) %>
        </div>
      <% end %>

      <div class="col-md-9 nomeLugar">
        <%= lugar.nome %>
      </div>
      <div class="col-md-8 enderecoLugar">
        <%= " #{lugar.endereco}, #{lugar.cidade}, #{lugar.estado}" %>
        <br>
        <%= lugar.tipo %>
      </div>

    </div>
  <% end %>
</div>



